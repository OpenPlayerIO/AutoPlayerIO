<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Atilla Lonny</Authors>
    <Company />
    <Product />
    <Description>A library designed to parse the Player.IO website and automate the website dashboard.</Description>
    <Copyright>MIT</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/OpenPlayerIO/AutoPlayerIO</PackageProjectUrl>
    <RepositoryUrl>https://github.com/OpenPlayerIO/AutoPlayerIO</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>AutoPlayerIO, PlayerIO, Player.IO</PackageTags>
    <Version>1.2.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="ExampleClient\**" />
    <EmbeddedResource Remove="ExampleClient\**" />
    <None Remove="ExampleClient\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AngleSharp" Version="0.16.1" />
    <PackageReference Include="Flurl.Http" Version="3.2.2" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
  </ItemGroup>

</Project>
